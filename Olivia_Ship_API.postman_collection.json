{
  "info": {
    "name": "Olivia Ship API",
    "description": "API Collection for Olivia Ship Mobile App",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"777123456\",\n  \"address\": \"صنعاء، اليمن\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Fetch Product from URL",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://www.amazon.sa/dp/B08N5WRWNW\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/products/fetch-from-url",
              "host": ["{{baseUrl}}"],
              "path": ["products", "fetch-from-url"]
            }
          }
        },
        {
          "name": "Calculate Cost",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 299.99,\n  \"currency\": \"SAR\",\n  \"weight\": 1.5,\n  \"quantity\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/products/calculate-cost",
              "host": ["{{baseUrl}}"],
              "path": ["products", "calculate-cost"]
            }
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cart",
              "host": ["{{baseUrl}}"],
              "path": ["cart"]
            }
          }
        },
        {
          "name": "Add to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://www.amazon.sa/dp/B08N5WRWNW\",\n  \"quantity\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/fetch-and-add",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "fetch-and-add"]
            }
          }
        },
        {
          "name": "Checkout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"shippingAddress\": {\n    \"fullName\": \"اسم المستلم\",\n    \"phone\": \"777123456\",\n    \"city\": \"صنعاء\",\n    \"address\": \"العنوان التفصيلي\"\n  },\n  \"paymentMethod\": \"stripe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/checkout",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "checkout"]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/orders?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["orders"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Track Order",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/orders/track/ORD-2025-001",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "track", "ORD-2025-001"]
            }
          }
        }
      ]
    },
    {
      "name": "Points of Sale",
      "item": [
        {
          "name": "Get Public Points",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/pos/public",
              "host": ["{{baseUrl}}"],
              "path": ["pos", "public"]
            }
          }
        },
        {
          "name": "Get Nearest Points",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/pos/nearest?lat=15.3694&lng=44.1910&radius=10",
              "host": ["{{baseUrl}}"],
              "path": ["pos", "nearest"],
              "query": [
                {
                  "key": "lat",
                  "value": "15.3694"
                },
                {
                  "key": "lng",
                  "value": "44.1910"
                },
                {
                  "key": "radius",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
